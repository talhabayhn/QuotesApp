<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="36dp"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">
    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/textContent"
        android:textStyle="italic"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingTop="12dp"/>
    <TextView
        android:id="@+id/textAuthor"
        android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingTop="8dp"/>
</LinearLayout>